rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // TTS audio files - publicly readable, only Cloud Functions can write
    match /tts/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if false;  // Only Cloud Functions can write
    }
    
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
